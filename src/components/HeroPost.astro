---
export interface Props {
    title: string
    excerpt: string
    href: string
    img: string
    author: string
    alt: string
}

const { title, excerpt, href, img, alt, author } = Astro.props;
---

<div class="w-full bg-base-100 shadow-xl">
    <a href={href}>
        <figure class="mb-5 w-full min-w-full">
            <img src={img} alt={alt} width="1200" class="object-cover w-full" />
        </figure>
        <div class="card-body">
            <h3 class="text-3xl mb-3 leading-snug">
                {title}
            </h3>
            <div class="text-lg leading-relaxed mb-4">
                <p set:html={excerpt.slice(0, 150) + "..." } />
            </div>
            <div class="flex justify-between">
                <div class="justify-center">
                    <span class="text-gray-600">{author}</span>
                </div>
                <div class="justify-end items-end">
                    <!--<div class="badge badge-outline"></div>-->
                </div>
            </div>
        </div>
    </a>
</div>
