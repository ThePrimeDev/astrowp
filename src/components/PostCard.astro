---
export interface Props {
    title: string
    excerpt: string;
    href: string;
    img: string;
    author: string;
    alt: string;
}

const { title, excerpt, href, img, author, alt } = Astro.props;
---

<div class="w-auto bg-base-100 shadow-xl">
    <a href={href}>
        <figure class="mb-5">
            <img src={img} alt={alt} width="900" />
        </figure>
        <div class="card-body">
            <h3 class="text-3xl mb-3 leading-snug">
                {title}
            </h3>
            <div class="text-lg leading-relaxed mb-4">
                <p set:html={excerpt.slice(0, 150) + "..." } />
            </div>
            <div class="card-actions justify-end">
                <!--<div class="badge badge-outline"></div>-->
            </div>
        </div>
    </a>
</div>
